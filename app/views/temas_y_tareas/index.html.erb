<%= render :layout => 'layouts/groups_layout' do%>
<div class="page-header">
     <h1 id="forms">Lista de Temas y Tareas</h1>     
</div>
<div class="row" style="margin-bottom:35px;">
  <%if current_user!=nil%>
    <div class="col-sm-3 col-md-3 col-lg-3"  style="padding-right: 50px; margin-right:-50px;">
      <a class="btn btn-primary btn-lg" onclick="throwFade()" href="/temas/new/<%=@grupo.id%>"><span class="icon-list icon-white" style="vertical-align:-1px;  margin-right:7px; "></span>Nuevo Tema</a>
    </div> 
  <%end%>
</div>
<div class="row">
<div class="col-lg-10">
    <% @temas_y_tareas.each do |tema_o_tarea| %>
    <div class="panel panel-default" style='cursor:pointer' onclick=<%="document.location.href='/"+tema_o_tarea.class.name.downcase+"s/"+tema_o_tarea.id.to_s+"'"%>>
      <div class="panel-heading">
        <h3 style="margin-top:0px; margin-bottom:0px;"><%= tema_o_tarea.titulo %></h3>
      </div>
      <div class="panel-body">
        <% if(tema_o_tarea.class.name=="Tema") %>
        <div class="row">
          <div class="col-sm-2 col-md-2 col-lg-2">
            <img title="Tema" src="/assets/tema.png" class="square-color-tema visible-phone" width="32" />
            <img title="Tema" src="/assets/tema.png" class="square-color-tema hidden-phone" />&nbsp;
          </div>
          <div class="col-sm-9 col-md-9 col-lg-9">
            <span><%= tema_o_tarea.cuerpo[0,315]+(tema_o_tarea.cuerpo.length>315 ? "..." : "")  %></span>
          </div>
        </div>
        <div class="row ">
            <div class="col-sm-6 col-md-6 col-lg-6">
              <small style="color: gray;">Tema creado el <%= tema_o_tarea.created_at.strftime("%d/%m/%Y a las: %I:%M  %p") %></small>
            </div>
         </div>
        <% else %>
        <div class="row">
           <div class="col-sm-2 col-md-2 col-lg-2">
           <img title="Tarea" src="/assets/tarea.png" class="square-color-tarea visible-phone" width="32" />
            <img title="Tarea" src="/assets/tarea.png" class="square-color-tarea hidden-phone" />&nbsp;
           </div>
           <div class="col-sm-9 col-md-9 col-lg-9">
            <span><%= tema_o_tarea.descripcion[0,315]+(tema_o_tarea.descripcion.length>315 ? "..." : "") %></span>
           </div>
        </div>
         <div class="row ">
            <div class="col-sm-6 col-md-6 col-lg-6">
              <small style="color: gray;">Tarea creada el <%= tema_o_tarea.created_at.strftime("%d/%m/%Y a las: %I:%M  %p") %></small>
            </div>
         </div>
        <% end %>
      </div>
    </div>
    <%end%>
</div>
</div>
<script type="text/javascript">
   $(".square-color-tema").css("background-color",get_random_color());
   $(".square-color-tarea").css("background-color",get_random_color());
</script>
<%end%>
