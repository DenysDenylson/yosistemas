<%= render :layout => 'layouts/groups_layout' do%>
<div class="page-header">
     <h1 id="forms">Lista de Tareas</h1>     
</div>
<div class="row" style="margin-bottom:50px;">
  <%if current_user!=nil && current_user.id==@grupo.usuario_id%>
    <div class="col-sm-9 col-md-9 col-lg-9">
      <a class="btn btn-primary btn-lg" onclick="throwFade()" href="/tareas/new/<%=@grupo.id%>"><span class="icon-pencil icon-white" style="vertical-align:-1px;  margin-right:7px; "></span>Nueva Tarea</a>
    </div> 
  <%end%>
</div>
<div class="row">
  <div class="col-lg-10">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th> Titulo </th>
          <th> Detalle </th>      
          <th> Fecha de entrega </th>
      </tr>
    </thead>
    <tbody>        
      <% @tareas.each do |tarea| %>
          <tr style='cursor:pointer' onclick=<%="document.location.href='/tareas/"+tarea.id.to_s+"'"%> >
            <td>
              <FONT FACE="raro, courier" SIZE=5 COLOR="black"> <%= tarea.titulo %><br> </FONT>
              <SUB><%= tarea.created_at.strftime("%e-%m-%Y")  %></SUB>
            </td>
            <td><%= tarea.descripcion[0..40]+"..." %></td>
            <td><%= tarea.fecha_entrega.strftime("%e-%m-%Y") + " " + tarea.hora_entrega.strftime("%I:%M %p") %></td>
          </tr>
      <% end %>    
    </tbody>
  </table>
  </div>
</div>
<%end%>
