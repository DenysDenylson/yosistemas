<%if @comment.usuario.id == current_user.id%>
	<h4>Editar Comentario</h4>
	<form method="post" action="/comments/editc/<%=@comment.id.to_s%>">	 	
		<textarea cols="40" rows="5" name="body"><%=@comment.body%></textarea><br><br>
		<input  class = "btn btn-inverse" type="submit" value="Editar">
	</form>
<%else%>
	<h1>No puedes editar este comentario!</h1>
<%end%>
