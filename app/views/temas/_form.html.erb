<%= form_for @tema, :html => { :class => 'bs-example form-horizontal' } do |f| %>
  <div class="row">
          <div class="col-lg-6">
            <div class="well">
                <fieldset>
                  <legend>Ingrese los datos del tema </legend>
                  <div class="form-group">
                     <label for="inputTitle" class="col-lg-2 control-label">Titulo:</label>
                    <div class="col-lg-10">
                        <%= f.text_field :titulo , :class=>'form-control', :placeholder=>'Titulo'%>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputContent" class="col-lg-2 control-label">Contenido:</label>
                    <div class="col-lg-10">
                      <%= f.text_area :cuerpo, :class=>'form-control',:rows=>'6', :placeholder=>'Contenido' %>
                    </div>
                  </div>
                  <div class="field">
                    <%=f.label :grupo_id %><br />
                    <%=f.collection_select(:grupo_id, @grupos, :id, :nombre,{:selected => @grupo.id})%>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                      <input type="submit" value="Crear tema" class="btn btn-primary">
                    </div>
                  </div>
                </fieldset>
        </div>
    </div>  
   </div>
<% end %>
