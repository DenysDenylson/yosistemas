 <script>
  $(function() {
    var gruposDisponibles = [
    <% current_user.grupos.each do |grupo|%>
      "<%=grupo.nombre.gsub(' ','_')%>",
    <% end %>
    "Publico"
    ];
   $( "#grupos" ).autocomplete({
      source: gruposDisponibles,
      minLength: 0
   });
   });

  function getGrupo()
  {
    var grupo = document.getElementById("grupos").value;
    document.getElementById("gruposDiv").innerHTML+="<div id='"+grupo+"'>"+ grupo +"<a href='#' onclick='quitarOpcion(&quot;"+grupo+"&quot);'>X</a> </div> ";
     document.getElementById("check" + grupo).checked = true;
    document.getElementById("grupos").value = "";

  };

  function quitarOpcion(id)
  {
    $("#" + id).replaceWith("");
    document.getElementById("check" + id).checked = false;
    return false;
  };
</script>
