<%= render :layout => 'layouts/groups_layout' do%>
<div class="page-header">
     <h1 id="forms">Lista de Temas</h1>
</div>
<form method="GET" action="/temas/search/<%=@grupo.id%>">
<div class="row" style="margin-bottom:50px;">
  <%if current_user!=nil%>
    <div class="col-sm-3 col-md-3 col-lg-3"  style="padding-right: 50px; margin-right:-50px;">
      <a class="btn btn-primary btn-lg" onclick="throwFade()" href="/temas/new/<%=@grupo.id%>"><span class="icon-list icon-white" style="vertical-align:-1px;  margin-right:7px; "></span>Nuevo Tema</a>
    </div> 
  <%end%>
  <%if current_user!=nil && current_user.id==@grupo.usuario_id%>
    <div class="col-sm-9 col-md-9 col-lg-9">
      <a class="btn btn-primary btn-lg" onclick="throwFade()" href="/tareas/new/<%=@grupo.id%>"><span class="icon-pencil icon-white" style="vertical-align:-1px;  margin-right:7px; "></span>Nueva Tarea</a>
    </div> 
  <%end%>
</div>
<div class="row">
  <div class="input-group col-sm-12 col-md-10 col-lg-10" >
    <span class="input-group-addon ">Titulo:</span>
    <input type="text" name="titulo" class="form-control">
    <span class="input-group-addon">Descripcion:</span>
    <input type="text" name="descripcion"  class="form-control">
    <span class="input-group-btn">
        <input class="btn btn-default" type="submit" value="Buscar Temas">
    </span>
  </div>

</div>
  
</form>
<br>

<br>
  <% @cadena=""%>
    <% @temas.each do |tema| %>
    <% @cadena = @cadena +"-"+ tema.id.to_s %>
  <%end%>
<br>
<div class="row">
<div class="col-lg-10">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <%if @temas.size != 0%>
        <th><%=link_to "Titulo", searchtitulo_path(@cadena,@grupo.id)%>  </th>
      <%else%>
        <th>Titulo </th>
      <%end%>  
      <th><%=sortable "Cuerpo" %></th>

    </tr>
  </thead>
                <tbody>    
    <%= @mine.to_s %>
    <% @temas.each do |tema| %>
      <%if tema.visible==1 %>
      <tr style='cursor:pointer' onclick=<%="document.location.href='/temas/"+tema.id.to_s+"'"%>>
        <td>
          <FONT FACE="raro, courier" SIZE=5 COLOR="black"> <%= tema.titulo %><br> </FONT>
          <SUB><%= tema.created_at.strftime("%Y-%m-%e")  %></SUB>
        </td>
    <td><%= tema.cuerpo[0..50]+"..." %></td>
    
      </tr>
      <% end %>
    <% end %>
  </tbody>
              </table>
</div>
</div>
</div>
<%end%>