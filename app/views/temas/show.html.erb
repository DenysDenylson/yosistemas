<div class="row">
<div class="col-lg-6 ">
    <div class="well">
        <form class="bs-example form-horizontal">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3">
              <%= image_tag avatar_tam_url(@tema.usuario,110) %>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
            <div class=row>
              <legend>
                &nbsp;<%= @tema.titulo %></legend>
            </div>
            <div class=row>
              <table class="table table-bordered">
                <tr>
                  <td>&nbsp;<%= @tema.created_at.strftime("%Y-%m-%e Hora: %I:%M") %></td>
                </tr>
                <tr>
                  <td>&nbsp;<%= @tema.cuerpo %></td>
                </tr>
              </table>
            </div>
              <div class=row>
                <%if current_user!=nil && @tema.usuario.correo==current_user.correo%>
                &nbsp;<%= link_to "Editar", edit_tema_path(@tema), :method => :post%>
                    <%end%>
                 &nbsp;&nbsp;&nbsp;   
                <%if current_user!=nil%> 
                <%cont=0%>
                  <% current_user.suscripcion_temas.each do |subs| %>
                    <% if subs.tema_id == @tema.id%>
                      <% cont=cont+1%>
                      <%= link_to "Ya no me Interesa", rechazar_tema_path(@tema.id)%> 
                    <%end%>
                  <%end%>    
                  <% if cont <= 0 %>
                      <%= link_to "Me Interesa", suscribirse_tema_path(@tema.id)%>  
                  <%end%>   
                <%end%>
              </div>
            </div>
          </div>
        </form>
      </div>
</div>
</div>
<%if current_user!=nil && @tema.usuario.correo == current_user.correo%>
<td><%= link_to 'Dejar de mostrar tema', visible_tema_path(@tema) %></td> 
<%end%>
<div class="row">
<div class="col-lg-6 ">
    <div class="well">
<%if current_user!=nil%>
	<%= form_for([@tema, @tema.comments.build]) do |f| %>
      <div class="form-group">
        <label for="inputContent">Comentario:</label>
            <%= f.text_area :body, :class=>'form-control',:rows=>'4', :cols =>'20', :placeholder=>'Contenido' %>
      </div>
      <div class="form-group">
          <input type="submit" value="Comentar" class="btn btn-primary">
      </div>
		<% end %>
<%end%>
</div>
</div>
</div>
<div class="col-12 col-md-10 col-lg-8">
<%for comment in @tema.comments%>
	<%if(comment.id!=nil)%>
	<div class="media">
	  <a class="pull-left" href="#">
	  	<%= image_tag avatar_tam_url(comment.usuario,70) %>	  
	  </a>
	  <div class="media-body">
	    <h4 class="media-heading"><%=comment.usuario.correo%></h4>
	    <%=comment.body%>
	    <br>
	    <%if current_user!=nil && comment.usuario.correo == current_user.correo%>
	    	<%= link_to 'Editar', "/temas/editComment/"+comment.id.to_s %>
        <%= link_to 'Eliminar', "/comments/delete/"+comment.id.to_s, data: { confirm: 'Se eliminara el tema, ¿está seguro?' } %>
	    <%end%>
	  </div>
	</div>
	<%end%>
<%end%>
</div>
<%= link_to 'Atras', temas_path %>
