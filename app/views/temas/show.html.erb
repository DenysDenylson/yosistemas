<div class="row">
<div class="col-lg-6 ">
    <div class="well">
        <form class="bs-example form-horizontal">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3">
              <%= image_tag avatar_url(@tema.usuario) %>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
            <div class=row>
              <legend>
                &nbsp;<%= @tema.titulo %></legend>
            </div>
            <div class=row>

              <table class="table table-bordered">
                <tr>
                  <td>&nbsp;<%= @tema.created_at.strftime("%Y-%m-%e Hora: %I:%M") %></td>
                </tr>
                <tr>
                  <td>&nbsp;<%= @tema.cuerpo %></td>
                </tr>
              </table>
            </div>
              <div class=row>
                <%if current_user!=nil && @tema.usuario.correo=current_user.correo%>
                &nbsp;<%= link_to "Editar", edit_tema_path(@tema), :method => :post%>
                    <%end%>
              </div>
            </div>
          </div>
        </form>
      </div>
</div>
</div>
<%if current_user!=nil && @tema.usuario.correo == current_user.correo%>
<td><%= link_to 'Dejar de mostrar tema', visible_tema_path(@tema) %></td> 
<%end%>
<%if current_user!=nil%>
	<%= form_for([@tema, @tema.comments.build]) do |f| %>
			<div class = "field">
				<h4><strong>Comentario</strong></h4>
				<%= f.text_area :body, cols: 30, rows: 10 %>
			</div>

			<div class = "action">
				
	    		<input type="submit" value="Comentar" class="btn btn-inverse">
			</div>
		<% end %>
<%end%>
<div class="col-12 col-md-10 col-lg-8">
<%for comment in @tema.comments%>
	<%if(comment.id!=nil)%>
	<div class="media">
	  <a class="pull-left" href="#">
	  	<%= image_tag avatar_url(comment.usuario) %>	  
	  </a>
	  <div class="media-body">
	    <h4 class="media-heading"><%=comment.usuario.correo%></h4>
	    <%=comment.body%>
	    <br>
	    <%if current_user!=nil && comment.usuario.correo == current_user.correo%>
	    	<%= link_to 'Editar', "/temas/editComment/"+comment.id.to_s %>
        <%= link_to 'Eliminar', "/comments/delete/"+comment.id.to_s %>
	    <%end%>
	  </div>
	</div>
	<%end%>
<%end%>
</div>
<%= link_to 'Atras', temas_path %>
