<%= form_for @grupo, :html => { :class => 'bs-example form-horizontal' } do |f| %>
  <div class="row">
          <div class="col-lg-6">
            <div class="well">
                <fieldset>
                  <legend>Ingrese los datos del grupo </legend>
                  <div class="form-group">
                     <label for="inputTitle" class="col-lg-3 control-label">Nombre:</label>
                    <div class="col-lg-9">
                        <%= f.text_field :nombre , :class=>'form-control', :placeholder=>'Nombre', :maxlength => 50, :required => true, :title => "El nombre del grupo es obligatorio, Por favor rellene este campo"%>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputContent" class="col-lg-3 control-label">Descripcion:</label>
                    <div class="col-lg-9">
                      <%= f.text_area :descripcion, :class=>'form-control',:rows=>'6', :placeholder=>'Descripcion', :maxlength => 500 %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-3 control-label">Estado</label>
                    <div class="col-lg-9">
                      <select class="form-control" id="grupo_estado" name="grupo[estado]">
                            <option value= "true">Privado</option>
                            <option value = "false">Publico</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
												<div class="col-md-4">	
													<div class "btn-group">							
													<%=link_to "Cancelar", grupos_path, :class => "btn btn-primary" %>
											</div>
										</div>
										<div class="col-md-4">	
                    <div class="col-lg-10 col-lg-offset-2">
                      <input type="submit" value="Crear grupo" class="btn btn-success">
                    </div>
									</div>
                  </div>
									
                </fieldset>
        </div>
    </div>
   </div>
<% end %>