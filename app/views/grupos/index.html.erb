<div class="row bs-example bs-example-type">
  <div class="col-lg-1"> 
  </div>
  <div class="col-lg-11">
    <h1>Lista de grupos</h1>
  </div>
</div>
<br>
<br>

<div class="row bs-example bs-example-type">
   <div class="col-lg-1"> 
  </div>
  <div class="col-lg-8">
    <% @grupos.each do |grupo| %>    
        <div class="well">
          <strong><legend><%=grupo.nombre%></legend></strong>
          <div class="row">
              <div class="col-lg-3">                 
                <h5>Creador:</h5>
                 <div class="row">
                  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= image_tag avatar_url(grupo.usuario) %>
                </div>
                <sub><%= grupo.usuario.correo%></sub>                
              </div>       
              <div class="col-lg-6">   
                  <br>          
                  <table class="table table-striped table-bordered table-hover">
                        <thead>
                          <tr>
                            <th>Descripcion</th>                           
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%=grupo.descripcion%></td>                           
                          </tr>
                        </tbody>
                  </table>
                  <%if current_user.id == grupo.usuario_id%>
                    <table class="table table-striped table-bordered table-hover">
                          <thead>
                            <tr>
                              <th>LLave</th>                           
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <td><%=grupo.llave%></td>                           
                            </tr>
                          </tbody>
                    </table>
                  <%end%>
              </div>  
              <div class="col-lg-3"> 
                <br>               
                 <%if current_user.id != grupo.usuario_id%>
                    <form class="navbar-form navbar-left" method="get" action=<%=suscribirse_path(grupo)%>  >            
                      <button type="submit" class="btn btn-primary">Suscribirse al grupo</button>  
                    </form>                 
                <%end%>
                 <form class="navbar-form navbar-left" method="get" action=<%=root_path%>  >            
                      <button type="submit" class="btn btn-primary">Ver Temas del Grupo</button>  
                    </form> 

              </div>              
          </div>        
        </div>        
    <% end %>
  </div>    
</div>
