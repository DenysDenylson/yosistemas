<div class="page-header">
     <h1 id="forms">Registrarse</h1>
</div>
<!-- <p>Find me in app/views/usuarios/new.html.erb</p> -->

<div>
	<% if flash[:status] == TRUE %>
		<P><%= flash[:alert]%></P>
	<% elsif flash[:status] == FALSE%>
		<% flash[:alert].each do |error|%>
			<p><%= error %></p>
	<% end %>
<% end %>
</div>
<%= form_for @usuario do |usuario| %>
<% usuario.hidden_field  :activa, :value=>true %>
<div class="row">
          <div class="col-lg-6">
            <div class="well">
              <form class="bs-example form-horizontal">
                <fieldset>
                  <legend>Ingrese sus datos para registro.</legend>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-4 control-label">Nombre:</label>
                    <div class="col-lg-8">
                      
                      <%= usuario.text_field :nombre, :class=>'form-control', :placeholder=>'Nombre' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputPassword" class="col-lg-4 control-label">Apellido:</label>
                    <div class="col-lg-8">
                      
                      <%= usuario.text_field :apellido, :class=>'form-control', :placeholder=>'Apellido'  %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-4 control-label">Contrase単a:</label>
                    <div class="col-lg-8">
                      
                      <%= usuario.password_field :contrasenia, :class=>'form-control', :placeholder=>'Contrase単a' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-4 control-label">Confirmar Contrase単a:</label>
                    <div class="col-lg-8">
                      
                      <%= usuario.password_field :contrasenia_de_confirmacion, :class=>'form-control', :placeholder=>'Confirmar Contrase単a' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-4 control-label">Correo:</label>
                    <div class="col-lg-8">
                      
                      <%= usuario.text_field :correo, :class=>'form-control', :placeholder=>'Correo' %>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-4">
                      <button type="submit" class="btn btn-primary">Registrar</button> 
                    </div>
                  </div>
                </fieldset>
              </form>
        </div>
    </div>  
   </div>
<% end %>
